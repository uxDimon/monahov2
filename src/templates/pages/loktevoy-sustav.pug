extends ../template

block variables
    - var title = 'Локтевой сустав'

block content
    main
        .head-pages
            .head-pages__bread-crumbs.bread-crumbs 
                a(href="/").bread-crumbs__linc Главная
                a(href="/").bread-crumbs__linc Направления
                span.bread-crumbs__linc.bread-crumbs__your-place Локтевой сустав
            h1.heading-2.head-pages__heading Направления
            nav.head-pages__manu
                ul.head-pages__manu-list
                    li.head-pages__manu-item
                        a(href="#").head-pages__manu-linc Коленный сустав
                    li.head-pages__manu-item
                        a(href="#").head-pages__manu-linc Плечевой сустав
                    li.head-pages__manu-item
                        a(href="#").head-pages__manu-linc.head-pages__manu-linc-active Локтевой сустав
                    li.head-pages__manu-item
                        a(href="#").head-pages__manu-linc Тазобедренный сустав

        .disease-category.main-grid
            .disease-category__img-wrap
                img(src="assets/images/loktev-joint-min.jpg", alt="Локтевой сустав", srcset="assets/images/loktev-joint@2x-min.jpg 2x").disease-category__img
                span.disease-category__img-name Локтевой сустав
                a(href="#").button.button_clear.disease-category__img-button Записаться на приём

            .disease-category__text-wrap
                .disease-category__text-item
                    a(href="#").button.button_clear.disease-category__text-button Артроз
                    p.disease-category__text-text Хроническое дегенеративное заболевание, проявляющееся болью, отеком, нарушением движения в локтевом суставе и его деформацией
                .disease-category__text-item
                    a(href="#").button.button_clear.disease-category__text-button Бурсит
                    p.disease-category__text-text Возникший в тканях, окружающих локтевой отросток, воспалительный процесс
                .disease-category__text-item
                    a(href="#").button.button_clear.disease-category__text-button Эпикондилит
                    p.disease-category__text-text Воспалительное заболевание, возникающее вследствие интенсивных физических нагрузок
                .disease-category__text-item
                    a(href="#").button.button_clear.disease-category__text-button Эпикондилит
                    p.disease-category__text-text Воспалительное заболевание, возникающее вследствие интенсивных физических нагрузок

            .disease-category__poles-wrap
                span.disease-category__poles Безоперативные методы в приоритете
                span.disease-category__poles Современное оборудование
                span.disease-category__poles Внимание к деталям